<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >


    <data>

        <variable
            name="model"
            type="com.example.buddybuilding.models.ShekamModel"></variable>

        <variable
            name="ShekamClickListener"
            type="com.example.buddybuilding.tools.ShekamClickListener"></variable>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_margin="2dp"
        android:textAlignment="center"
        android:layout_height="wrap_content">


        <LinearLayout
            android:onClick="@{()-> ShekamClickListener.Clicked(model)}"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="@{model.name}"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="4dp"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/bnazanin"
                android:layout_margin="2dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>
