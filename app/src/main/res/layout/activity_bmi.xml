<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.BMIActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bnazanin"
                android:gravity="center"
                android:text="محاسبه BMI "
                android:textColor="@color/black"
                android:textSize="25dp" />






            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:weightSum="2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bnazanin"
                    android:gravity="right"
                    android:text="قد ( متر ) "
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bnazanin"
                    android:gravity="right"
                    android:id="@+id/edtgad"
                    android:textColor="@color/black"
                    android:textSize="22dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="2">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bnazanin"
                    android:gravity="right"
                    android:text="وزن ( کیلوگرم ) "
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bnazanin"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:id="@+id/edtvazn"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/bnazanin"
                    android:id="@+id/txtnatije"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22dp" />


            </LinearLayout>


            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/btnmohasebe"
                android:fontFamily="@font/bnazanin"
                android:textSize="20sp"
                android:gravity="center"
                android:text="محاسبه" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/bnazanin"
                    android:id="@+id/txtnumnatije"
                    android:gravity="center"
                    android:textColor="@color/a"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/bnazanin"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/txttozihnatije"
                    android:gravity="center"
                    android:textColor="@color/a"
                    android:textSize="25dp" />



            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>