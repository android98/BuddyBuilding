<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.BMRActivity">


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bnazanin"
        android:gravity="center"
        android:text="محاسبه BMR"
        android:textColor="@color/black"
        android:textSize="25dp" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textDirection="rtl">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bnazanin"
                    android:gravity="right"
                    android:text="قد ( سانتی متر ) "
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textDirection="rtl"
                    android:textSize="22dp" />



                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/height" />


            </LinearLayout>


            <EditText
                android:id="@+id/edtgad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bnazanin"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="22dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bnazanin"
                    android:gravity="right"
                    android:text="وزن ( کیلوگرم ) "
                    android:textColor="@color/black"
                    android:textSize="22dp" />


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/weight" />

            </LinearLayout>


            <EditText
                android:id="@+id/edtvazn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bnazanin"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="22dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layoutDirection="rtl"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bnazanin"
                android:gravity="right"
                android:text="سن"
                android:textColor="@color/black"
                android:textSize="22dp" />


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/age" />


            </LinearLayout>


            <EditText
                android:id="@+id/edtsen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bnazanin"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="22dp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bnazanin"
                    android:gravity="right"
                    android:text=" جنسیت"
                    android:textColor="@color/black"
                    android:textSize="22dp" />


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_person_outline_black_24dp" />


                <RadioGroup
                    android:id="@+id/radiosex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:textAlignment="center">


                    <RadioButton
                        android:id="@+id/radiomale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:fontFamily="@font/bnazanin"

                        android:onClick="onRadioButtonClicked"
                        android:text="مذکر"
                        android:textSize="20dp" />


                    <RadioButton
                        android:id="@+id/radiofemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:fontFamily="@font/bnazanin"

                        android:onClick="onRadioButtonClicked"
                        android:text="مونث"
                        android:textSize="20dp" />


                </RadioGroup>


                <TextView
                    android:id="@+id/txtnatije"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/bnazanin"
                    android:gravity="center"
                    android:textColor="@color/a"
                    android:textSize="30dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/bnazanin"
                    android:gravity="right"
                    android:text="محاسبه میزان کالری روزانه"
                    android:textColor="@color/black"
                    android:textSize="22dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/bnazanin"
                        android:gravity="right"
                        android:text="میزان فعالیت "
                        android:textColor="@color/black"
                        android:textSize="22dp" />


                    <RadioGroup
                        android:id="@+id/radiofaaliat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:textAlignment="center"
                        android:textDirection="rtl">


                        <RadioButton
                            android:id="@+id/radiovarzeshkam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:fontFamily="@font/bnazanin"
                            android:onClick="onRadioButtonClickedFaaliat"

                            android:text="ورزش کم"
                            android:textSize="20dp" />


                        <RadioButton
                            android:id="@+id/radiovazreshsabok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:fontFamily="@font/bnazanin"

                            android:onClick="onRadioButtonClickedFaaliat"
                            android:text="ورزش سبک"
                            android:textSize="20dp" />

                        <RadioButton
                            android:id="@+id/radiovarzeshmotevaset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:fontFamily="@font/bnazanin"
                            android:onClick="onRadioButtonClickedFaaliat"

                            android:text="ورزش متوسط"
                            android:textSize="20dp" />


                        <RadioButton
                            android:id="@+id/radiovarzeshziad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:fontFamily="@font/bnazanin"

                            android:onClick="onRadioButtonClickedFaaliat"
                            android:text="ورزش زیاد"
                            android:textSize="20dp" />


                        <RadioButton
                            android:id="@+id/radiovarzeshsanin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:fontFamily="@font/bnazanin"

                            android:onClick="onRadioButtonClickedFaaliat"
                            android:text="ورزش سنگین"
                            android:textSize="20dp" />


                    </RadioGroup>


                    <TextView
                        android:id="@+id/txtnatijefaaliat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/bnazanin"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/a"
                        android:textSize="30dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>